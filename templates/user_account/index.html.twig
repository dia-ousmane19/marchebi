        </li>

      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade " id="home" role="tabpanel" aria-labelledby="home-tab">
          <div class="">
            <h2> <span class="badge badge-primary">Mes annonces expirées</span> </h2>
            <div class="album py-5 bg-light">
              <div class="container">

                <div class="row">
                  {% for MesAnnonce in users %}
                  {% for AnnonceExp in MesAnnonce %}


                  <div class="col-md-4">

                    <div class="card mb-4 box-shadow">
                      <img class="d-block w-100 card-img-top"  src="{{ asset('/uploads/images/images_annonces/')}}{{AnnonceExp.nom}}" alt="Card image cap">

                      <div class="card-body">
                        <h4><a href="{{ path('annonce',{'slug':AnnonceExp.annonces.slug}) }}">{{ AnnonceExp.annonces.titre}}</a> </h4>
                        <h4><i class='fas fa-coins'></i> {{ AnnonceExp.annonces.prix}} FCFA</h4>

                        <small class="text-muted">{{ AnnonceExp.annonces.users.nomComplet}}</small>
                        <p class="card-text">{{ AnnonceExp.annonces.description |slice(0,100) |raw}}</p>
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="btn-group">
                            <a href="{{ path('annonce',{'slug':AnnonceExp.annonces.slug}) }}" type="button" class="btn btn-sm btn-outline-secondary">Voir</a>

                          </div>
                          <small class="text-muted">{{ AnnonceExp.annonces.updatedAt |format_date}}</small>
                          <small class="alert alert-danger text-muted">expirée le {{ AnnonceExp.annonces.expiredAt |format_date}}</small>

                        </div>

                      </div>
                    </div>
                  </div>
                  {% else %}
                  <div class="alert alert-warning">
