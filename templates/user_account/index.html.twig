                      <small class="text-muted">{{ Annonce.annonces.users.nomComplet}}</small>
                      <p class="card-text">{{ Annonce.annonces.description |slice(0,100) |raw}}</p>
                      <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                          <a href="{{ path('annonce',{'slug':Annonce.annonces.slug}) }}" type="button" class="btn btn-sm btn-outline-secondary">Voir</a>
                        </div>
                        <small class="text-muted">{{ Annonce.annonces.updatedAt |format_date}}</small>
                        <small class="alert alert-danger text-muted">expirée le {{ Annonce.annonces.expiredAt |format_date}}</small>
                      </div>


                    </div>
                  </div>
                </div>

