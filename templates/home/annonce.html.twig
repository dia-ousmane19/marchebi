{% extends 'base.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/home.css') }}">{% endblock %}
{% block title %}Annonce{% endblock %}
{% block javascripts %}<script src='https://kit.fontawesome.com/a076d05399.js'></script>{% endblock %}
{% block body %}
{{ include('partials/header.html.twig') }}

<div class="container-fluid" style="margin-top:250px">
  <div class="row">
    <div class="col-md-8 mt-1 col-sm-12">
      <div id="carouselExampleIndicators" class="carousel slide  rounded" data-ride="carousel">
        <ol class="carousel-indicators">

        {% for i in range(1,annonceComplete.images|length) %}

          <li data-target="#carouselExampleIndicators" data-slide-to="{{i}}" > </li>

            {% endfor %}
          <!-- <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="5"></li> -->

        </ol>
        <div class="carousel-inner" style="height:auto" >
          {% for MesImages in annonceComplete.images %}
          <div class="carousel-item {% if MesImages.ImagePrincipale == true %}active{% endif %} ">
            <img class="d-block w-100 img-thumbnail"  src="{{ asset('uploads/images/images_annonces/') }}{{MesImages.nom}}" alt="First slide">
          </div>
          {% endfor %}


        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="col-md-4 col-sm-12 mt-1">
      <div class="jumbotron border border-primary rounded">
        <h1 class="display-4">{{ annonceComplete.titre }}</h1>
        <small class="text-muted"><i class="fas fa-tag"></i> {{ annonceComplete.categorie}}</small>
        <p class="lead">{{ annonceComplete.description |raw }}</p>
        <p class="text-muted"> <span class="badge badge-danger">Publiée le {{ annonceComplete.updatedAt |format_datetime}}</span> </p>

        <hr class="my-4">
        {% if annonceComplete.prix == null %}
        <h3>Sur commande</h3>
        {% else %}
        <h3>{{annonceComplete.prix}} FCFA</h3>
        {% endif %}
        <ul>
          {% if annonceComplete.possibiliteEchange == 1 %}
          <li>Il y a une possibilité d'échange</li>
          {% endif %}
            {% if annonceComplete.prixNegociable == 1 %}
          <li>Prix est négociable</li>
          {% endif %}
        </ul>
        <p class="text-muted"> <span class="badge badge-primary">{{ InfoUser.nomComplet}}</span> </p>
        <a class="btn btn-primary btn-sm" href="#" role="button">Contacter l'annonceur</a>
      </div>
    </div>
  </div>
  {{ include('partials/footer.html.twig') }}
</div>
{% endblock %}
