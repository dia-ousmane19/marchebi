{% extends 'base.html.twig' %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/login.css') }}">{% endblock %}
{% block title %}Sign-up{% endblock %}

{% block body %}
<div class="d-flex fixed-top flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
  <a class="my-0 mr-md-auto mb-2" href="{{ path ('home')}}"><img  src="{{ asset('images/logo.jpg')}}" alt="" width="128" height="128"></a>
  <nav class="my-2 my-md-0 mr-md-3">
    <a class="btn btn-outline-primary" href="{{ path('app_register') }}">Faites une annonces</a>
    <a class="btn btn-outline-primary" href="{{ path('app_login') }}">Connexion</a>
  </nav>
</div>

<div id="form_inscription">

{{ form_start(registrationForm,{'class':'form-signin'}) }}

      <div class="text-center mb-4">
        <img class="mb-4" src="{{ asset('images/logoLogin.png')}}" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Inscrivez-vous</h1>
        <p>Build form controls with floating labels via the pseudo-element.</p>
      </div>
      <div class="form-label-group">
        {{ form_row(registrationForm.email) }}
      </div>
      <div class="form-label-group">
        {{ form_row(registrationForm.NomComplet) }}
      </div>
      <div class="form-label-group">
        {{ form_row(registrationForm.NumeroDeTel) }}
      </div>

      <div class="form-label-group">
          {{ form_row(registrationForm.Password) }}
      </div>

      <!-- <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div> -->
      <button class="btn btn-lg btn-primary btn-block" type="submit">S'inscrire</button>
      <p class="mt-5 mb-3 text-muted text-center">&copy; 2019-2020</p>
  {{ form_end(registrationForm) }}

</div>
  {% endblock %}
